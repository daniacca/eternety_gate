{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://custodi.example/schemas/storypack.schema.json",
  "title": "StoryPack",
  "type": "object",
  "required": [
    "id",
    "title",
    "version",
    "stateSchema",
    "initialState",
    "systems",
    "startSceneId",
    "scenes"
  ],
  "additionalProperties": false,
  "properties": {
    "id": {
      "type": "string",
      "minLength": 1
    },
    "title": {
      "type": "string",
      "minLength": 1
    },
    "version": {
      "type": "string",
      "minLength": 1
    },
    "meta": {
      "type": "object",
      "additionalProperties": true
    },
    "stateSchema": {
      "$ref": "#/$defs/stateSchema"
    },
    "initialState": {
      "$ref": "#/$defs/initialState"
    },
    "systems": {
      "$ref": "#/$defs/systems"
    },
    "startSceneId": {
      "type": "string",
      "minLength": 1
    },
    "cast": {
      "type": "object",
      "additionalProperties": true
    },
    "effectsCatalog": {
      "type": "object",
      "additionalProperties": true
    },
    "scenes": {
      "type": "array",
      "minItems": 1,
      "items": {
        "$ref": "#/$defs/scene"
      }
    }
  },
  "$defs": {
    "stateSchema": {
      "type": "object",
      "required": [
        "flags",
        "counters",
        "inventory"
      ],
      "additionalProperties": true,
      "properties": {
        "flags": {
          "type": "object",
          "additionalProperties": {
            "type": "string"
          }
        },
        "counters": {
          "type": "object",
          "additionalProperties": {
            "type": "string"
          }
        },
        "inventory": {
          "type": "object",
          "additionalProperties": true
        }
      }
    },
    "initialState": {
      "type": "object",
      "required": [
        "flags",
        "counters",
        "inventory"
      ],
      "additionalProperties": true,
      "properties": {
        "flags": {
          "type": "object",
          "additionalProperties": {
            "type": "boolean"
          }
        },
        "counters": {
          "type": "object",
          "additionalProperties": {
            "type": "number"
          }
        },
        "inventory": {
          "type": "object",
          "required": [
            "items"
          ],
          "properties": {
            "items": {
              "type": "array",
              "items": {
                "type": "string"
              }
            }
          },
          "additionalProperties": true
        },
        "runVariant": {
          "type": "object",
          "additionalProperties": true
        }
      }
    },
    "systems": {
      "type": "object",
      "required": [
        "checks"
      ],
      "additionalProperties": true,
      "properties": {
        "checks": {
          "type": "object",
          "required": [
            "difficultyBands",
            "criticals"
          ],
          "additionalProperties": true,
          "properties": {
            "difficultyBands": {
              "type": "object",
              "additionalProperties": {
                "type": "integer"
              }
            },
            "criticals": {
              "type": "object",
              "required": [
                "autoSuccess",
                "autoFail",
                "epic"
              ],
              "properties": {
                "autoSuccess": {
                  "type": "array",
                  "items": {
                    "type": "integer"
                  }
                },
                "autoFail": {
                  "type": "array",
                  "items": {
                    "type": "integer"
                  }
                },
                "epic": {
                  "type": "object",
                  "additionalProperties": true
                }
              },
              "additionalProperties": true
            }
          }
        },
        "worldEvents": {
          "type": "object",
          "additionalProperties": true
        },
        "runVariants": {
          "type": "array",
          "items": {
            "type": "object",
            "additionalProperties": true
          }
        }
      }
    },
    "scene": {
      "type": "object",
      "required": [
        "id",
        "type",
        "title",
        "text",
        "choices"
      ],
      "additionalProperties": false,
      "properties": {
        "id": {
          "type": "string",
          "minLength": 1
        },
        "type": {
          "type": "string",
          "enum": [
            "narration",
            "dialogue",
            "hub",
            "system",
            "challenge",
            "ending"
          ]
        },
        "title": {
          "type": "string"
        },
        "text": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "textBlocks": {
          "type": "array",
          "items": {
            "$ref": "#/$defs/textBlock"
          }
        },
        "onEnter": {
          "type": "array",
          "items": {
            "$ref": "#/$defs/effect"
          }
        },
        "checks": {
          "type": "array",
          "items": {
            "$ref": "#/$defs/check"
          }
        },
        "choices": {
          "type": "array",
          "items": {
            "$ref": "#/$defs/choice"
          }
        },
        "rewards": {
          "type": "array",
          "items": {
            "type": "object",
            "additionalProperties": true
          }
        },
        "persistentConsequences": {
          "type": "array",
          "items": {
            "type": "object",
            "additionalProperties": true
          }
        }
      }
    },
    "textBlock": {
      "type": "object",
      "required": [
        "conditions",
        "text"
      ],
      "additionalProperties": false,
      "properties": {
        "conditions": {
          "oneOf": [
            {
              "$ref": "#/$defs/condition"
            },
            {
              "type": "array",
              "minItems": 1,
              "items": {
                "$ref": "#/$defs/condition"
              }
            }
          ]
        },
        "text": {
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      }
    },
    "choice": {
      "type": "object",
      "required": [
        "id",
        "label",
        "effects"
      ],
      "additionalProperties": false,
      "properties": {
        "id": {
          "type": "string",
          "minLength": 1
        },
        "label": {
          "type": "string"
        },
        "conditions": {
          "oneOf": [
            {
              "$ref": "#/$defs/condition"
            },
            {
              "type": "array",
              "minItems": 1,
              "items": {
                "$ref": "#/$defs/condition"
              }
            }
          ]
        },
        "checks": {
          "type": "array",
          "items": {
            "$ref": "#/$defs/check"
          }
        },
        "effects": {
          "type": "array",
          "items": {
            "$ref": "#/$defs/effect"
          }
        }
      }
    },
    "condition": {
      "oneOf": [
        {
          "$ref": "#/$defs/condFlag"
        },
        {
          "$ref": "#/$defs/condCounterGte"
        },
        {
          "$ref": "#/$defs/condCounterLte"
        },
        {
          "$ref": "#/$defs/condAnd"
        },
        {
          "$ref": "#/$defs/condOr"
        },
        {
          "$ref": "#/$defs/condNot"
        }
      ]
    },
    "condFlag": {
      "type": "object",
      "required": [
        "op",
        "path",
        "value"
      ],
      "additionalProperties": false,
      "properties": {
        "op": {
          "const": "flag"
        },
        "path": {
          "type": "string"
        },
        "value": {
          "type": "boolean"
        }
      }
    },
    "condCounterGte": {
      "type": "object",
      "required": [
        "op",
        "path",
        "value"
      ],
      "additionalProperties": false,
      "properties": {
        "op": {
          "const": "counterGte"
        },
        "path": {
          "type": "string"
        },
        "value": {
          "type": "number"
        }
      }
    },
    "condCounterLte": {
      "type": "object",
      "required": [
        "op",
        "path",
        "value"
      ],
      "additionalProperties": false,
      "properties": {
        "op": {
          "const": "counterLte"
        },
        "path": {
          "type": "string"
        },
        "value": {
          "type": "number"
        }
      }
    },
    "condAnd": {
      "type": "object",
      "required": [
        "op",
        "clauses"
      ],
      "additionalProperties": false,
      "properties": {
        "op": {
          "const": "and"
        },
        "clauses": {
          "type": "array",
          "minItems": 1,
          "items": {
            "$ref": "#/$defs/condition"
          }
        }
      }
    },
    "condOr": {
      "type": "object",
      "required": [
        "op",
        "clauses"
      ],
      "additionalProperties": false,
      "properties": {
        "op": {
          "const": "or"
        },
        "clauses": {
          "type": "array",
          "minItems": 1,
          "items": {
            "$ref": "#/$defs/condition"
          }
        }
      }
    },
    "condNot": {
      "type": "object",
      "required": [
        "op",
        "clause"
      ],
      "additionalProperties": false,
      "properties": {
        "op": {
          "const": "not"
        },
        "clause": {
          "$ref": "#/$defs/condition"
        }
      }
    },
    "effect": {
      "type": "object",
      "required": [
        "op"
      ],
      "additionalProperties": true,
      "properties": {
        "op": {
          "type": "string",
          "enum": [
            "setFlag",
            "addCounter",
            "addItem",
            "removeItem",
            "goto",
            "conditionalEffects",
            "chooseRunVariant",
            "applyVariantStartEffects",
            "fireWorldEvents"
          ]
        },
        "path": {
          "type": "string"
        },
        "value": {},
        "sceneId": {
          "type": "string"
        },
        "cases": {
          "type": "array"
        }
      }
    },
    "check": {
      "type": "object",
      "required": [
        "id",
        "kind"
      ],
      "additionalProperties": true,
      "properties": {
        "id": {
          "type": "string"
        },
        "kind": {
          "type": "string",
          "enum": [
            "single",
            "multi",
            "opposed",
            "sequence",
            "magicChannel",
            "magicEffect"
          ]
        },
        "actorRef": {
          "$ref": "#/$defs/actorRef"
        },
        "difficulty": {
          "type": "string"
        },
        "targetDoS": {
          "type": "integer",
          "minimum": 1,
          "description": "DoS to accumulate via channeling"
        },
        "castingNumberDoS": {
          "type": "integer",
          "minimum": 1,
          "description": "DoS required to successfully manifest the effect"
        },
        "onSuccess": {
          "type": "array",
          "items": {
            "$ref": "#/$defs/effect"
          }
        },
        "onFailure": {
          "type": "array",
          "items": {
            "$ref": "#/$defs/effect"
          }
        },
        "key": {
          "type": "string"
        }
      }
    },
    "actorRef": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "mode": {
          "type": "string",
          "enum": [
            "active",
            "byId",
            "bestOfParty",
            "askPlayer"
          ]
        },
        "actorId": {
          "type": "string"
        },
        "key": {
          "type": "string"
        }
      }
    }
  }
}